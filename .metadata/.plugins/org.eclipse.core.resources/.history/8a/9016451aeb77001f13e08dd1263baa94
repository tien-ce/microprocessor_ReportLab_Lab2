#include "ex9.h"
int index_col = 0;
void ex9_init(){
	setTimer1(0, 250);
}
void ex9_run(){
	if(index_col>=8){
		index_col = 0;
	}
	if(timer1_flag[0]==1){
		updateLEDMatrix(GPIOA, EN0_Pin, EN1_Pin, EN2_Pin, EN3_Pin, EN4_Pin, EN5_Pin, EN6_Pin, EN7_Pin, index_col);
		setTimer1(0, 250);
		index_col++;
	}
}
