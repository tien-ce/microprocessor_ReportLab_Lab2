#include "ex10.h"
int index_col_10 = 7;
int state = 0;
void ex10_init(){
	setTimer1(0, 100);
    setTimer1(1, 800);
	updateMatrixBuffer(0x00, 0xFC, 0x0A, 0x09, 0x09, 0x0A, 0xFC, 0x00);
}
void ex10_run() {

	if(state >8){
		state = 0;
	}
	if(index_col_10<0){
		index_col_10 = 7;
	}
	if(timer1_flag[1]==1){
		setTimer1(1, 800);
		state++;
	}


	if(timer1_flag[0]==1){
		 updateColLEDMatrix(GPIOA, ENM0_Pin, ENM1_Pin, ENM2_Pin, ENM3_Pin, ENM4_Pin, ENM5_Pin, ENM6_Pin, ENM7_Pin, index_col_10);
		 updateRowLEDMatrix(GPIOB, ROW0_Pin, ROW1_Pin, ROW2_Pin, ROW3_Pin, ROW4_Pin, ROW5_Pin, ROW6_Pin, ROW7_Pin, index_col_10+state);
		setTimer1(0, 100);
		index_col_10++;
	}
}



