#include "ex9.h"
int index_col = 0;
void ex9_init(){
	setTimer1(0, 250);
}
void ex9_run(){
	if(index_col>=8){
		index_col = 0;
	}
	if(timer1_flag[0]==1){
		updateLEDMatrix(GPIOA, ENM0_Pin, ENM1_Pin, ENM2_Pin, ENM3_Pin, ENM4_Pin, ENM5_Pin, ENM6_Pin, ENM7_Pin, index_col);
		updateRowLEDMatrix(GPIOB, ROW0, ROW1, ROW2, ROW3, ROW4, ROW5, ROW6, ROW7, index_col)
		setTimer1(0, 250);
		index_col++;
	}
}
