#include "ex7.h"
void ex7 init(){
	 int hour = 15 , minute = 8 , second = 50;
	 int index_led = 0;
}
void ex7 run(){
	  if(timer1_flag[1]==1){
		  		  if(index_led >=4){
		  			  index_led=0;
		  		  }
		  		  setTimer1(1, 25);
		  		  update7SEG(index_led);
		  		  index_led ++;
		  	  }
		  	  second ++;
		  	 if ( second >= 60) {
		  	  second = 0;
		  	  minute ++;
		  	  }
		  	  if( minute >= 60) {
		  	  minute = 0;
		  	  hour ++;
		  	  }
		  	  if( hour >=24) {
		  	  hour = 0;
		  	  }
		  	  updateClockBuffer () ;
}
