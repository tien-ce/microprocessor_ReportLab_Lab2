#include "ex7.h"
void ex7_init(){
	int hour = 15 , minute = 8 , second = 50;
	int index = 0 ;
	setTimer1(2, 1000);
	state = 0;

}

void ex7_run(){
     if(timer1_flag[1]==1){
       if(index >=4){
	      index=0;
        }
  setTimer1(1, 250);
  update7SEG(index);
  index ++;
      }
	if(timer1_flag[2]==1){
		setTimer1(2, 1000);
		 second ++;
		 if ( second >= 60) {
		  second = 0;
		  minute ++;
		  }
		  if( minute >= 60) {
		  minute = 0;
		  hour ++;
		  }
		  if( hour >=24) {
		  hour = 0;
		  }
		  updateClockBuffer () ;
	}
}

